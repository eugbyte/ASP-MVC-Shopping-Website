
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .feedback{
        margin-top: 10px;
    }

</style>

<div class="row feedback">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Contact Us</h2>
        @using (Html.BeginForm("SubmitFeedback", "ContactUs", FormMethod.Post))
        {
    <div class="form-group">
        @Html.Label("email", "Email")
        <input type="email" name="email" id="email" class="form-control" required/>
     </div>

    <div class="form-group">
        @Html.Label("textarea", "Enter text here")
        <textarea class="form-control" rows="4" cols="50" name="comment" id="textarea" required></textarea>
    </div>
            <input type="submit" value="Submit" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-4"></div>
</div>

<script>
    var form = document.querySelector("form");
    form.addEventListener("submit", function () {
        window.alert("your response has been saved");
    });
</script>

